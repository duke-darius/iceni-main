---
interface Props {
    name: string;
    image: string;
    bio: string;
    qualifications: string[];
}

const { name, image, bio, qualifications } = Astro.props;
---

<div class="group bg-white rounded-2xl shadow-xl shadow-blue-100 hover:shadow-2xl hover:shadow-blue-100 transition-all duration-300 overflow-hidden">
    <div class="relative">
        <img src={image} alt={name} class="w-full h-96 object-cover" />
        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
    </div>
    <div class="p-8">
        <h3 class="font-display text-2xl font-bold mb-3">{name}</h3>
        <p class="text-gray-600 mb-6 leading-relaxed">{bio}</p>
        <div class="space-y-3">
            <h4 class="font-display font-semibold text-blue-900">Qualifications:</h4>
            <ul class="space-y-2">
                {qualifications.map(qual => (
                        <li class="flex items-start gap-2">
                            <span class="text-blue-500 mt-1">âœ“</span>
                            <span class="text-gray-600">{qual}</span>
                        </li>
                ))}
            </ul>
        </div>
    </div>
</div>