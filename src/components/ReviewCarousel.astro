---
interface Review {
    name: string;
    text: string;
    date: string;
}

const reviews: Review[] = [
    {
        name: "Sarah Johnson",
        text: "Lee was an amazing instructor! His patience and clear explanations helped me pass first time. Couldn't recommend enough!",
        date: "March 2024"
    },
    {
        name: "James Wilson",
        text: "Catherine's modern teaching approach made learning to drive enjoyable. Her tips for eco-friendly driving were especially helpful.",
        date: "February 2024"
    },
    {
        name: "Emma Thompson",
        text: "As a nervous learner, I couldn't have asked for a better instructor than Lee. His calm demeanor made all the difference.",
        date: "March 2024"
    },
    {
        name: "Michael Brown",
        text: "Catherine is fantastic! Her structured approach to lessons really helped me progress quickly. Passed with only 2 minors!",
        date: "January 2024"
    },
    {
        name: "Lucy Davies",
        text: "The best driving school in Norfolk! Professional, reliable, and genuinely care about their students' progress.",
        date: "February 2024"
    },
];
---


<div class="flex flex-col text-center py-24 bg-gradient-to-br from-blue-900 to-blue-800 overflow-hidden">
    <div class="container mx-auto">
        <div class="text-center mb-16">
            <h2 class="font-semibold text-3xl text-white">Testimonials</h2>
            <div class="mx-auto w-24 h-1 bg-gradient-to-r from-blue-400 to-blue-200"></div>
        </div>

        <div class="flex flex-wrap " id="review-list">
            {reviews.map((review) => (
                <div class="my-1 px-1 w-full">
                    <div class="review-card flex flex-col p-4 text-center border border-white rounded-2xl backdrop-filter backdrop-blur-sm bg-white/10">
                        <div class="text-yellow-300 text-xl">★★★★★</div>
                        <p class="text-blue-100 mb-6 leading-relaxed">"{review.text}"</p>
                        <div class="mt-auto">
                            <p class="font-semibold text-white">{review.name}</p>
                            <p class="text-sm text-blue-200">{review.date}</p>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</div>
<script>
    $('#review-list').slick({
        centerMode: true,
        centerPadding: '60px',
        slidesToShow: 3,
        autoplay: true,
        arrows: false,
        autoplaySpeed: 2000,
        responsive: [
            {
                breakpoint: 768,
                settings: {
                    arrows: false,
                    centerMode: true,
                    centerPadding: '40px',
                    slidesToShow: 1
                }
            },
            {
                breakpoint: 480,
                settings: {
                    arrows: false,
                    centerMode: true,
                    centerPadding: '40px',
                    slidesToShow: 1
                }
            }
        ]
    });

</script>
<style>
    .review-card {
        min-height: 200px;
    }
</style>
